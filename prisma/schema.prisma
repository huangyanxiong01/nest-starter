generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  password String
  roleId   Int?
  email    String @unique
  role     Role?  @relation(fields: [roleId], references: [id])
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  users       User[]
  permissions Permission[]
}

model Permission {
  id         Int              @id @default(autoincrement())
  resource   String
  attributes String
  action     PermissionAction
  roles      Role[]

  @@unique([resource, attributes, action], name: "Permission_resource_attributes_action_key")
}

enum PermissionAction {
  update_any  @map("update:any")
  read_any    @map("read:any")
  delete_own  @map("delete:own")
  delete_any  @map("delete:any")
  create_any  @map("create:any")
  update_own  @map("update:own")
  create_own  @map("create:own")
  read_own    @map("read:own")
}
